# vim: syntax=config
#
# ============= wm independent hotkeys ==============
#

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# terminal emulator
super + Return
	alacritty

# music player
super + n
	alacritty -e ncmpcpp

# browser
super + w
	librewolf

# browser alt
super + shift + w
	chromium

# ranger
super + d
	alacritty -e ranger

# pamix
super + p
	alacritty --class pamix,floating -t Pamix -e pamix

# ytfzf
super + y
	alacritty --class ytfzf,floating -t Ytfzf -e ytfzf -t

# screenshot
Print
	flameshot full -p ~/Pictures/screenshots

# Partial screenshot
shift + Print
	flameshot gui

# Polybar toggle
super + b
  polybar-msg cmd toggle
#
# ============= Scripts ==============
#

# clock
super + c
	~/.config/scripts/clocks.sh

# mpv from clipboard
super + shift + y
	~/.config/scripts/logseqParser.sh

#
# ============= Rofi menus ==============
#

# Rofi
super + space
	~/.config/rofi/bin/launcher

# Sink control
super + v
	~/.config/rofi/bin/quicklinks

# Lofi radio
super + shift + r
	~/.config/rofi/scripts/rofi-beats.sh

# Windows
super + Tab
	~/.config/rofi/scripts/window-list.sh

# Powermenu
super + x
	~/.config/rofi/bin/powermenu

# Emoji selector
super + shift + i
	~/.config/rofi/bin/emoji

# Feeds
super + r
	~/.config/rofi/bin/feed

#
# ================ Music Controls =======================
#

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc stop

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

#
# ================ Volume Utility =======================
#

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +1%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -1%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

#
# =============== Brightness Utility ====================
#

XF86MonBrightnessUp
	brightnessctl s +5%

XF86MonBrightnessDown
	brightnessctl s 5%-

shift + XF86MonBrightnessUp
	brightnessctl s 100%

shift + XF86MonBrightnessDown
	brightnessctl s 0.1%

#
# ================== bspwm hotkeys ======================
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{k,c}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# ================= Focus/swap ======================
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {h,l}
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Window positioner
super + ctrl + c
  bspc node -t floating; \
  bspc node -g sticky; \
  bspc node -z top 0 395; \
  bspc node -z right -779 0; \
  bspc node -v 1115 -560

#
# =================== Preselect ======================
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# =================== move/resize =====================
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + ctrl + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
